---
import "../styles/global.css";
const { title = "Chess Platform" } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- TipografÃ­as elegantes -->
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;600;700&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">

    <title>{title}</title>
  </head>

  <body class="h-screen bg-gray-100 text-gray-900 overflow-hidden">

    <!-- Header -->
    <header class="bg-white shadow">
      <nav class="nav-menu max-w-7xl mx-auto py-4">
        <a href="/" class="nav-link">Home</a>
        <a href="/login" class="nav-link">Login</a>
        <a href="/register" class="nav-link">Registro</a>
        <a href="/play" class="nav-link">Jugar</a>
        <a href="/puzzles" class="nav-link">Puzzles</a>
        <a href="/profile" class="nav-link">Perfil</a>
      </nav>
    </header>

    <!-- Contenido -->
    <main class="max-w-7xl mx-auto h-[calc(100vh-120px)] flex items-start justify-center">
      <slot />
    </main>
  </body>
</html>
